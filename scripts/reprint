#!/usr/bin/env nu

# Reprints output from a specific command in the tmux pane history
def main [--cmd=""] {
  ^tmux capture-pane -S- -p -J
  | split row --regex $' *($env.USER)@.*\n *'
  | parse $'$ {cmd}(char newline){output}'
  | where cmd !~ ^reprint
  | if $cmd == "" {
    input list --fuzzy --display cmd
  } else {
    where cmd =~ $cmd
    | last
  }
  | get output
}

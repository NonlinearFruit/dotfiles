#!/usr/bin/env nu

def main [
  query            # Text to search for
  --highlight (-l) # Hightlight query in search results
] {
  {
    scheme: https
    host: api.esv.org
    path: v3/passage/search/
    params: {
      q: ($query | url encode)
      page-size: 100
    }
  }
  | url join
  | http get -H { Authorization: $"Token 7bf823cec4289f8fbce0b802be2cdeb22fd79c5b" } $in
  | get results
  | if $highlight {
    update content { str replace --all --regex $"\(?i)\(($query))" $'(ansi red)$1(ansi reset)' }
  } else {
    $in
  }
}

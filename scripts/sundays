#!/usr/bin/env nu

# Number of Sundays left until someone turns 18
def main [
  birthdate: datetime # Someone's birthday
] {
  $birthdate
  | into record
  | update year {$in + 18}
  | $"($in.year)-($in.month)-($in.day)"
  | seq date --end-date $in --output-format '%A'
  | where $it == 'Sunday'
  | length
}
